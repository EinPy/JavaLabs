import se.lth.cs.pt.window.SimpleWindow;

public class Graphics {
	private int width;
	private int height;
	private int blockSize;
	private SimpleWindow w;;
	
	public Graphics(int w, int h, int bs) {
		this.width = w;
		this.height = h;
		this.blockSize = bs;
		w = new SimpleWindow(w * bs, h * bs,"graphics!")
	}
	
	public void square() {
		
		w.moveTo(10, 10);
		w.lineTo(10, 20);
		w.lineTo(20, 20);
		w.lineTo(20, 10);
		w.lineTo(10, 10);
	}
}
